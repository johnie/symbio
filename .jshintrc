{
  "curly": true,     // true: Require {} for every new block or scope
  "eqeqeq": false,   // false: Require triple equals (===) for comparison
  "immed": false,    // false: Require immediate invocations to be wrapped in parens e.g. `(function () { } ());`
  "latedef": false,  // false: Require variables/functions to be defined before being used
  "newcap": false,   // false: Require capitalization of all constructor functions e.g. `new F()`
  "noarg": false,    // false: Prohibit use of `arguments.caller` and `arguments.callee`
  "sub": false,      // false: Tolerate using `[]` notation when it can still be expressed in dot notation
  "undef": false,    // false: Require all non-global variables to be declared (prevents global leaks)
  "boss": false,     // false: Tolerate assignments where comparisons would be expected
  "eqnull": false,   // false: Tolerate use of `== null`
  "node": false      // Node.js
}
